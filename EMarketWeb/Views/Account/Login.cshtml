@model LoginCredentials

@{
    ViewData["Title"] = "Log In";
}

<form method="post" class="m-3">
    <div class="container border col-lg-4 p-3">
        <fieldset>
            <legend>Welcome to EMarket!</legend>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col mb-3 p-1">
                <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group col mb-3 p-1">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </fieldset>

        <div class="row mx-auto col-md-6">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

        <div class="row">
            <a class="btn btn-link" asp-controller="Register" asp-action="Index">or Create Account</a>
        </div>

    </div>
</form>
