@using EMarketWeb.Services
@{
    ViewData["Title"] = "Home Page";
    PageInfo<Product> pageInfo = ViewBag.PageInfo;
    CategoryFilterService categoryFilter = ViewBag.CategoryFilter;
}

<div class="bg-primary container-fluid p-1 pt-3 p-lg-4 mb-3">
    <div class="container-fluid d-flex flex-row">
        <div class="col">
            <h4 class="text-light text-uppercase">Your favorite</h4>
            <h1 class="text-light">EMarket <i class="bi bi-shop"></i></h1>
        </div>
        <div class="col-7 d-none d-lg-block">
            <div class="container-fluid d-none d-lg-flex" id="featuredProductContainer">
                @if (pageInfo.ActiveItems.Any())
                {
                    <button class="btn btn-sm circle text-white align-self-center" onclick="navigate(-1)"><i class="bi bi-arrow-left"></i></button>
                    <div class="flex-grow-1 d-flex align-content-center p-2" id="featuredProductDiv"></div>
                    <button class="btn btn-sm text-white align-self-center" onclick="navigate(1)"><i class="bi bi-arrow-right"></i></button>
                }
            </div>
        </div>
    </div>
</div>

<div class="row container-fluid p-lg-5">
    <div class="col-lg-3">
        <form asp-action="search" method="get">
            <div class="input-group mb-3">
                <input type="text" name="searchString" class="form-control" placeholder="Looking for something?" aria-label="Recipient's username" aria-describedby="button-addon2">
                <button class="btn btn-primary" type="submit" id="button-addon2">Search</button>
            </div>
        </form>
        <div class="container-sm w-auto d-none d-lg-block">
            <fieldset class="form-group p-2">
                <legend>Category</legend>
                @foreach (var category in categoryFilter.Categories
                    .OrderBy(m => m.Id < 0)
                    .ThenBy(m => m.Name))
                {
                    <form method="post" asp-action="oncategoryticked" asp-route-categoryId="@category.Id">
                        <div class="form-check ms-3 ms-lg-0">
                            <input class="form-check-input" type="checkbox" id="@category.Id" onchange="this.form.submit()" @(categoryFilter.IsDisplayed(category.Id) ? "checked" : "")/>
                            <label class="form-check-label" for="@category.Id">
                                @category.Name
                            </label>
                        </div>
                    </form>
                }
            </fieldset>
        </div>
    </div>
    <div class="col">
        @if (!pageInfo.ActiveItems.Any())
        {
            <h6>There are no products listed. Try again later.</h6>
        }
        else
        {
            @if (pageInfo.NoOfPages > 1)
            {
                <div class="container-fluid ps-0">
                    <ul class="pagination pagination-sm">
                        <li class="page-item">
                            <a class="page-link" asp-action="Navigate" asp-route-pageNo="@(pageInfo.ActivePage - 1)">&laquo;</a>
                        </li>
                        @foreach (var pageNo in Enumerable.Range(1, pageInfo.NoOfPages))
                        {
                            <li class="page-item">
                                <a class="page-link @(pageInfo.ActivePage == pageNo ? "active" : "")" asp-action="Navigate" asp-route-pageNo="@pageNo">@pageNo</a>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" asp-action="Navigate" asp-route-pageNo="@(pageInfo.ActivePage + 1)">&raquo;</a>
                        </li>
                    </ul>
                </div>
            }

            <div class="card-deck d-flex flex-wrap justify-content-start ps-0">
                @foreach (Product product in pageInfo.ActiveItems)
                {
                    <div class="me-lg-3 mt-2 mb-2 me-2 ms-lg-0">
                        @await Html.PartialAsync("_ProductCard", product)
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        navigate(0);

        function navigate(direction) {
            var container = $('#featuredProductContainer');

            $.ajax({
                url: '/Home/GetFeaturedProductView',
                type: 'GET',
                data: { direction: direction },
                success: function (result) {
                    $('#featuredProductDiv').html(result);
                    if (container.hasClass('d-none')) {
                        container.removeClass('d-none');
                        container.addClass('d-flex');
                        container.addClass('d-lg-flex');
                    }
                },
                error: function () {
                    console.log('Not found');
                    if (container.hasClass('d-none') == false) {
                        container.addClass('d-none');
                        container.removeClass('d-flex');
                        container.removeClass('d-lg-flex');
                        console.log('huh');
                    }
                }
            });
        }

        function addtocart(productId) {
            $.ajax({
                url: '/Home/AddToCart',
                type: 'GET',
                data: { productId: productId },
                success: function (result) {
                    console.log('Added to cart');
                    toastr.success('Added ' + result + ' to cart.');
                },
                error: function () {
                    console.log('Not found');
                }
            });
        }
    </script>
}