@using EMarketWeb.Services
@{
    ViewData["Title"] = "Home Page";
    PageInfo<Product> pageInfo = ViewBag.PageInfo;
    CategoryFilterService categoryFilter = ViewBag.CategoryFilter;
}

<div class="bg-primary container-fluid p-2 pt-3 p-lg-5 mb-3">
    <div class="container-fluid">
        <h4 class="text-light text-uppercase">Your favorite</h4>
        <h1 class="text-light">EMarket <i class="bi bi-shop"></i></h1>
    </div>
</div>

<div class="row container-fluid p-lg-5">
    <div class="col-lg-3">
        <form asp-action="search" method="get">
            <div class="input-group mb-3">
                <input type="text" name="searchString" class="form-control" placeholder="Looking for something?" aria-label="Recipient's username" aria-describedby="button-addon2">
                <button class="btn btn-primary" type="submit" id="button-addon2">Search</button>
            </div>
        </form>
        <div class="container-sm w-auto d-none d-lg-block">
            <fieldset class="form-group p-2">
                <legend>Category</legend>
                @foreach (var category in categoryFilter.Categories
                    .OrderBy(m => m.Id < 0)
                    .ThenBy(m => m.Name))
                {
                    <form method="post" asp-action="oncategoryticked" asp-route-categoryId="@category.Id">
                        <div class="form-check ms-3 ms-lg-0">
                            <input class="form-check-input" type="checkbox" id="@category.Id" onchange="this.form.submit()" @(categoryFilter.IsDisplayed(category.Id) ? "checked" : "")/>
                            <label class="form-check-label" for="@category.Id">
                                @category.Name
                            </label>
                        </div>
                    </form>
                }
            </fieldset>
        </div>
    </div>
    <div class="col">
        @if (!pageInfo.ActiveItems.Any())
        {
            <h6>There are no products listed. Try again later.</h6>
        }
        else
        {
            <div>
                <ul class="pagination pagination-sm">
                    <li class="page-item">
                        <a class="page-link" asp-action="Navigate" asp-route-pageNo="@(pageInfo.ActivePage - 1)">&laquo;</a>
                    </li>
                    @foreach (var pageNo in Enumerable.Range(1, pageInfo.NoOfPages))
                    {
                        <li class="page-item">
                            <a class="page-link @(pageInfo.ActivePage == pageNo ? "active" : "")" asp-action="Navigate" asp-route-pageNo="@pageNo">@pageNo</a>
                        </li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-action="Navigate" asp-route-pageNo="@(pageInfo.ActivePage + 1)">&raquo;</a>
                    </li>
                </ul>
            </div>

            <div class="card-deck d-flex flex-wrap justify-content-center justify-content-lg-start">
                @foreach (Product product in pageInfo.ActiveItems)
                {
                    <div class="card me-lg-3 mt-2 mb-2 me-2 ms-lg-0 ms-2 position-relative" style="width: 200px; min-height: 200px" title="@product.Description">

                        <a asp-action="Edit" asp-route-itemId="@product.Id" style="text-decoration: none">
                            <div class="card-body text-center">
                                <div style="height: 150px">
                                    <img class="card-img" style="height: inherit;object-fit:cover" src="@(string.IsNullOrEmpty(product.ImageSource) ? "~/images/no-image.jpg" : product.ImageSource)" asp-append-version="true"/>
                                </div>
                                <h6 class="card-title mt-4 mb-1 text-primary-emphasis">@product.Name</h6>
                                <div class="row">    
                                    <small class="text-body-tertiary overflow-hidden" style="font-size: 12px; white-space: nowrap; text-overflow: ellipsis">
                                        @product.GetCategoriesFormattedString()
                                    </small>
                                    <small class="card-text text-body-tertiary">
                                        Php @product.UnitPrice.ToString("N2")
                                    </small>
                                </div>
                            </div>
                        </a>

                        <div class="position-relative">
                            <div class="position-absolute bottom-0 end-0 m-2">
                                <button class="badge bg-outline-primary rounded-pill border-0 p-1" type="submit">
                                    <a asp-controller="Home" asp-action="AddToCart" asp-route-productId="@product.Id">
                                        <i class="bi bi-plus text-primary" style="font-size: 20px"></i>
                                    </a>
                                </button>
                            </div>
                        </div>

                        @if(DateTime.Now - product.DateCreated < TimeSpan.FromDays(7))
                        {
                            <span class="position-absolute top-0 start-0 m-2 badge rounded-pill bg-warning">
                                New
                            </span>
                        }

                    </div>
                }

                <div class="card me-lg-3 mt-2 mb-2 me-2 ms-lg-0 ms-2 justify-content-center d-flex bg-body-secondary" style="width: 200px; min-height: 200px">

                    <a asp-action="index" asp-controller="addproduct" class="d-flex justify-content-center align-items-center w-100 h-100" style="text-decoration: none;">
                        <div class="card-body text-center">
                            <i class="bi bi-plus-lg text-primary"></i>
                        </div>
                    </a>

                </div>

            </div>
        }
    </div>
</div>