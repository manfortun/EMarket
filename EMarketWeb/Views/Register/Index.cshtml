@model RegisterCredentials

@{
    ViewData["Title"] = "Register";
}

<form method="post" class="m-3">
    <div class="container border p-4 col-lg-5">
        <fieldset>
            <legend>Register</legend>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col mb-3 p-1">
                <label asp-for="Username" class="col-sm-2 col-form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group col mb-3 p-1">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col mb-3 p-1">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col mb-3 p-1">
                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </fieldset>

        <div class="row mb-3">
            <div class="col-md-5 mx-auto">
                <button type="submit" class="btn btn-primary form-control">Create Account</button>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}